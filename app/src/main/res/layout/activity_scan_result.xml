<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aviasa100.myandroidproject.ScanResultActivity">

    <ImageView
        android:id="@+id/myShoppingCart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginStart="12dp"
        android:background="@drawable/startbtn" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myShoppingCart"
        android:layout_marginTop="15dp"
        android:text="Fresh Bananas "
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/reduceBtn"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@+id/priceResult"
        android:layout_toEndOf="@+id/chosenAmount"
        android:background="@drawable/minusbtn"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/chosenAmount"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="30sp" />
    <Button
        android:id="@+id/addBtn"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/chosenAmount"

        android:background="@drawable/plusbtn"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/myShoppingCart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/bananas" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Weight_of_product"
        android:text="PRICE:"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/priceResult"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weightResult"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/Weight_of_product"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="12dp"
        android:text="WEIGHT:"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/weightResult"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView4"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="APPLY and KEEP SHOPPING"/>

</RelativeLayout>
